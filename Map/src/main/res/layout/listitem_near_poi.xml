<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_near_poi_item"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/normal_white_pressed_gray"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/listitem_near_poi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="长虹公园"
        android:textColor="#ff343434"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listitem_near_poi_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="南开区 南开区红旗路145号"
        android:textColor="#ff9a9a9a"
        android:textSize="12sp" />
</LinearLayout>